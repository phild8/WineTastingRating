<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ratingListGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/flightNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="24sp"
        android:text="flight"
        android:background="@drawable/textview_border_header"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingColorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="24sp"
        android:text="color"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingAromaTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:textSize="24sp"
        android:text="aroma"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingBodyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:text="body"
        android:textSize="24sp"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingTasteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="4"
        android:textSize="24sp"
        android:text="rating"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingFinishTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="5"
        android:text="finish"
        android:textSize="24sp"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingTotalTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="6"
        android:text="total"
        android:textSize="24sp"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingNotesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="7"
        android:layout_columnSpan="2"
        android:text="rates"
        android:textSize="24sp"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

</GridLayout>