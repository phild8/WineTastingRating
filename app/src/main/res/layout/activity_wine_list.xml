<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ratingListGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="1"
    android:columnCount="9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flightNumberTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="24sp"
        android:layout_columnWeight="0.8"
        android:background="@drawable/textview_border_header"
        android:gravity="center"/>

    <Button
        android:id="@+id/ratingColorTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="24sp"
        android:layout_columnWeight="1"
        android:background="@drawable/textview_border"
        android:onClick="colorFragment"
        android:gravity="center"/>

    <Button
        android:id="@+id/ratingAromaTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="2"
        android:textSize="24sp"
        android:layout_columnWeight="1"
        android:background="@drawable/textview_border"
        android:onClick="aromaFragment"
        android:gravity="center"/>

    <Button
        android:id="@+id/ratingBodyTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="3"
        android:textSize="24sp"
        android:layout_columnWeight="1"
        android:background="@drawable/textview_border"
        android:onClick="bodyFragment"
        android:gravity="center"/>

    <Button
        android:id="@+id/ratingTasteTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="4"
        android:textSize="24sp"
        android:layout_columnWeight="1"
        android:background="@drawable/textview_border"
        android:onClick="tasteFragment"
        android:gravity="center"/>

    <Button
        android:id="@+id/ratingFinishTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="5"
        android:textSize="24sp"
        android:layout_columnWeight="1"
        android:background="@drawable/textview_border"
        android:onClick="finishFragment"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingTotalTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="6"
        android:textSize="24sp"
        android:layout_columnWeight="1"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ratingRankTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="7"
        android:textSize="24sp"
        android:layout_columnWeight="1"
        android:background="@drawable/textview_border"
        android:gravity="center"/>

    <EditText
        android:id="@+id/ratingNotesTV"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="8"
        android:layout_columnWeight="4"
        android:inputType="text"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:textSize="24sp"/>

</GridLayout>