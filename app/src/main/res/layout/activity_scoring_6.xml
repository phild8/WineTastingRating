<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityRatingHeaders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--tools:context="edu.orangecoastcollege.cs273.jburk.winetastingnotes.MainActivity">-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="9"
        android:columnCount="9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/header_wine"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/textview_border_header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/textview_border_header"
            android:text="@string/header_appearance"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/textview_border_header"
            android:text="@string/header_aroma"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/textview_border_header"
            android:text="@string/header_body"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:background="@drawable/textview_border_header"
            android:text="@string/header_taste"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="5"
            android:background="@drawable/textview_border_header"
            android:text="@string/header_finish"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="6"
            android:background="@drawable/textview_border_header"
            android:text="@string/header_total"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_columnSpan="2"
            android:background="@drawable/textview_border_header"
            android:text="@string/header_notes"
            android:textSize="24sp"
            android:gravity="center"/>

    </GridLayout>

    <ListView
        android:id="@+id/ratingListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingBottom="4dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp">
    </ListView>

</LinearLayout>